generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ExpertArea {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  description    String //Corte,Montagem, Instalação
  updatedAt      DateTime
  createdAt      DateTime
  Commissioned   Commissioned? @relation(fields: [commissionedId], references: [id])
  commissionedId String?       @db.ObjectId
}

model Commissioned {
  id                String       @id @default(auto()) @map("_id") @db.ObjectId
  expertArea        ExpertArea[]
  commissionPercent Float?
  updatedAt         DateTime
  createdAt         DateTime
  Employee          Employee?    @relation(fields: [employeeId], references: [id])
  employeeId        String?      @db.ObjectId
  expertAreaId      String       @db.ObjectId
}

model Employee {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  salary         Float?
  commissionedBy Commissioned[]
  updatedAt      DateTime       @updatedAt
  createdAt      DateTime       @default(now())
}

model BudgetItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  itemOrd     Int
  description String
  measure     String
  width       Int
  height      Int
  quantity    Float
  amount_unit Float
  discont     Float
  subTotal    Float
  total       Float
  Budget      Budget?  @relation(fields: [budgetId], references: [id])
  budgetId    String?  @db.ObjectId
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model Budget {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  shortId        Int
  customer       String
  saller         String?
  discont        Float
  discontPercent Float
  subTotal       Float
  total          Float
  itemsCount     Int?
  budgetItems    BudgetItem[]
  updatedAt      DateTime     @updatedAt
  createdAt      DateTime     @default(now())
}
