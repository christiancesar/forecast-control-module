generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ExpertArea {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  description    String //Corte,Montagem, Instalação
  updatedAt      DateTime
  createdAt      DateTime
  Commissioned   Commissioned? @relation(fields: [commissionedId], references: [id])
  commissionedId String?       @db.ObjectId
}

model Commissioned {
  id                String       @id @default(auto()) @map("_id") @db.ObjectId
  expertArea        ExpertArea[]
  commissionPercent Float?
  updatedAt         DateTime
  createdAt         DateTime
  Employee          Employee?    @relation(fields: [employeeId], references: [id])
  employeeId        String?      @db.ObjectId
  expertAreaId      String       @db.ObjectId
}

model Employee {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  salary         Float?
  commissionedBy Commissioned[]
  updatedAt      DateTime       @updatedAt
  createdAt      DateTime       @default(now())
}
